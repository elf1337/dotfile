" nocompatible mode enabled
set nocompatible

" set backspace in insert mode for erase the characters
set backspace=2

" add line numbers and remove the blank space issue
set number
set nuw=2

" wrap lines
set wrap

" set status bar
set laststatus=2

" Highlight search
set hlsearch

" set encoding to utf-8
set encoding=utf-8

" set linewrap
set wrap

" set background colors
highlight Normal ctermfg=white ctermbg=black

